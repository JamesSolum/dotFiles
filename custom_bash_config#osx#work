export PATH="/usr/local/opt/postgresql@9.5/bin:$PATH"
eval "$(rbenv init -)"
#source $(brew --prefix nvm)/nvm.sh  # This takes too long to load
export NVM_DIR="$HOME/.nvm"

# Local aliases

# Rails Server
alias serve='bundle exec rails s'
alias s='serve'

# Procore DB
alias migrate='bundle exec rake db:migrate && bundle exec rake db:migrate RAILS_ENV=test'
alias rollback='bundle exec rake db:rollback step=1 && bundle exec rake db:rollback step=1 RAILS_ENV=test'
alias resetdb='bundle exec rake db:drop db:create db:setup db:test:prepare'
alias snvm='source $(brew --prefix nvm)/nvm.sh'

# Rubo Cop
alias rubo-check='git diff-tree -r --no-commit-id --name-only head origin/master | xargs rubocop'
alias rubo-correct='git diff-tree -r --no-commit-id --name-only head origin/master | xargs rubocop --auto-correct'

# Postgres installation with ASDF
source ~/.asdf/asdf.sh
source ~/.asdf/completions/asdf.bash

